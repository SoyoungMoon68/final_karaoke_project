<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="USERQuery">



    <sql id="WhereQuery" >
        
    </sql>


    <sql id="InlineViewQuery" >
        <![CDATA[
            SELECT
                     USER_ID         userId
                    ,USER_NAME       userName
                    ,USER_AGE        userAge
                    ,USER_PHONE      userPhone
                    
            FROM   USER

            WHERE  1 = 1
        ]]>
    </sql>


    <!-- 관리자_메뉴권한리스트조회 -->
    <select id="selectZCOM99021_00" parameterType="USERModel" resultType="USERModel" >
        <include refid="Zcom00000Query.PagingTop" />
        <include refid="InlineViewQuery" />
        <include refid="WhereQuery" />
        <![CDATA[
            ORDER BY 
                     USER_ID                   
        ]]>
        <include refid="Zcom00000Query.PagingBottom" />
    </select>

    <!-- 관리자_메뉴권한리스트수조회 -->
    <select id="selectZCOM99021_01" parameterType="USERModel" resultType="USERModel" >
        <![CDATA[
            SELECT
                     COUNT(*) totCnt
            FROM   (
        ]]>
        <include refid="InlineViewQuery"/>
        <include refid="WhereQuery" />
        <![CDATA[
                   ) TOT
        ]]>
    </select>

    <!-- 관리자_메뉴권한등록 -->
    <insert id="insertZCOM99021_00" parameterType="USERModel" >
        <![CDATA[
            INSERT INTO USER
            (
                     USER_ID
                    ,USER_NAME
                    ,USER_AGE
                    ,USER_PHONE                          /* 수정 일시                      */
            ) VALUES (
                     #{userId}                        /* 그룹사 ID                      */
                   , #{userName}                         /* 일련번호                       */
                   , #{userAge}                     /* 메뉴 권한 코드                 */
                   , #{userPhone}                     /* 사용자 권한 코드               */
                                         /* 수정 일시                      */
            )
        ]]>
    </insert>


    <!-- 관리자_메뉴권한수정 -->
    <update id="updateZCOM99021_00" parameterType="USERModel" >
        <![CDATA[
            UPDATE USER SET
                     USER_ID				      = #{userId} 
                    ,USER_NAME					  = #{userName}
                    ,USER_AGE 					  = #{userAge}
                    ,USER_PHONE                   = #{userPhone}                         /* 수정 일시                      */
            WHERE  USER_ID = #{userId}
                   
        ]]>
    </update>


    <!-- 관리자_메뉴권한삭제 -->
    <delete id="deleteZCOM99021_00" parameterType="USERModel" >
        <![CDATA[
            DELETE FROM USER
            WHERE  USER_ID = #{userId}     
        ]]>
    </delete>


</mapper>