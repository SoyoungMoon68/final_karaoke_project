<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ROOMQuery">



    <sql id="WhereQuery" >
        <if test="@project.spring.app.zcom.lib.object.ZcomMyBatis@isNotEmpty(srchGrpCd)">
            AND    ZCOM99011.GRP_CD                         = #{srchGrpCd}
        </if>
        <if test="@project.spring.app.zcom.lib.object.ZcomMyBatis@isNotEmpty(srchCd)">
            AND    ZCOM99011.CD                             = #{srchCd}
        </if>
        <if test="@project.spring.app.zcom.lib.object.ZcomMyBatis@isNotEmpty(srchCdNm)">
            AND    ZCOM99011.CD_NM                          = #{srchCdNm}
        </if>
        <if test="@project.spring.app.zcom.lib.object.ZcomMyBatis@isNotEmpty(srchSerNum)">
            AND    ZCOM99011.SER_NUM                        = #{srchSerNum}
        </if>
        <if test="@project.spring.app.zcom.lib.object.ZcomMyBatis@isNotEmpty(srchCdCtt)">
            AND    ZCOM99011.CD_CTT                         = #{srchCdCtt}
        </if>
    </sql>


    <sql id="InlineViewQuery" >
        <![CDATA[
            SELECT
                     STORE_ID
                    ,ROOM_NUM
                    ,MAX_PER

            FROM   ROOM
            WHERE  1 = 1
        ]]>
    </sql>


    <!-- 관리자_코드리스트조회 -->
    <select id="selectZCOM99011_00" parameterType="Zcom99010Model" resultType="Zcom99010Model" >
        <include refid="Zcom00000Query.PagingTop" />
        <include refid="InlineViewQuery" />
        <include refid="WhereQuery" />
        <![CDATA[
            ORDER BY 
                     ZCOM99011.GRP_CD                        
                   , ZCOM99011.CD                            
        ]]>
        <include refid="Zcom00000Query.PagingBottom" />
    </select>

    <!-- 관리자_코드리스트수조회 -->
    <select id="selectZCOM99011_01" parameterType="Zcom99010Model" resultType="Zcom99010Model" >
        <![CDATA[
            SELECT
                     COUNT(*) totCnt
            FROM   (
        ]]>
        <include refid="InlineViewQuery"/>
        <include refid="WhereQuery" />
        <![CDATA[
                   ) TOT
        ]]>
    </select>


    <!-- 관리자_코드조회 -->
    <select id="selectZCOM99011_02" parameterType="Zcom99010Model" resultType="Zcom99010Model" >
        <include refid="InlineViewQuery" />
        <![CDATA[
            AND    ZCOM99011.GRP_CD                         = #{grpCd}                          /* 그룹 코드                      */
            AND    ZCOM99011.CD                             = #{cd}                             /* 코드                           */
        ]]>
    </select>


    <!-- 관리자_코드등록 -->
    <insert id="insertZCOM99011_00" parameterType="Zcom99010Model" >
        <![CDATA[
            INSERT INTO ROOM
            (
                     STORE_ID
                    ,ROOM_NUM
                    ,MAX_PER
                                           
            ) VALUES (
                     #{storeId}                          /* 그룹 코드                      */
                   , #{roomNum}                             /* 코드                           */
                   , #{maxPer}                           /* 코드 명                        */
                                                           
            )
        ]]>
    </insert>


    <!-- 관리자_코드수정 -->
    <update id="updateZCOM99011_00" parameterType="Zcom99010Model" >
        <![CDATA[
            UPDATE ZCOM99011 SET
                     CD_NM                          = #{cdNm}                           /* 코드 명                        */
                   , SER_NUM                        = #{serNum}                         /* 일련번호                       */
                   , CD_CTT                         = #{cdCtt}                          /* 코드 내용                      */
                   , EFF_STA_DT                     = #{effStaDt}                       /* 유효 시작 일자                 */
                   , EFF_END_DT                     = #{effEndDt}                       /* 유효 종료 일자                 */
                   , DEL_YN                         = #{delYn}                          /* 삭제 여부                      */
                   , UPD_USER_NUM                   = #{updUserNum}                     /* 수정 사용자 번호               */
                   , UPD_IP                         = #{updIp}                          /* 수정 IP                        */
                   , UPD_DTM                        = #{updDtm}                         /* 수정 일시                      */
            WHERE  1 = 1
            AND    GRP_CD                         = #{grpCd}                          /* 그룹 코드                      */
            AND    CD                             = #{cd}                             /* 코드                           */
        ]]>
    </update>


    <!-- 관리자_코드삭제 -->
    <delete id="deleteZCOM99011_00" parameterType="Zcom99010Model" >
        <![CDATA[
            DELETE FROM ZCOM99011
            WHERE  1 = 1
            AND    GRP_CD                         = #{grpCd}                          /* 그룹 코드                      */
            AND    CD                             = #{cd}                             /* 코드                           */
        ]]>
    </delete>


    <!-- 관리자_코드 전체 삭제 -->
    <delete id="deleteZCOM99011_01" parameterType="Zcom99010Model" >
        <![CDATA[
            TRUNCATE TABLE ZCOM99011
        ]]>
    </delete>


    <!-- 관리자_코드 그룹사 삭제 -->
    <delete id="deleteZCOM99011_02" parameterType="Zcom99010Model" >
        <![CDATA[
            DELETE FROM ZCOM99011
            WHERE  1 = 1
            AND    GRP_CO_ID                      = #{grpCoId}                        /* 그룹사 ID                      */
        ]]>
    </delete>

</mapper>